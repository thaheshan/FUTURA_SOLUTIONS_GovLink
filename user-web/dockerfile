# Stage 1: Build React frontend
FROM node:18-alpine AS builder
WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./
RUN npm ci

# Copy frontend source code
COPY . .

# Copy shared modules
COPY ../Shared ./node_modules/@srilanka-gov/shared

# Build the React app
RUN npm run build

# Stage 2: Nginx production image
FROM nginx:1.23-alpine
WORKDIR /usr/share/nginx/html

COPY --from=frontend-builder /app/build .

EXPOSE 3000
CMD ["nginx", "-g", "daemon off;"]

# Set working directory
WORKDIR /app

# Copy package files
COPY user-web/package.json user-web/package-lock.json ./

# Install dependencies
RUN npm ci

# Copy all frontend source code
COPY user-web/ ./
COPY shared/ ./shared/

# Build the React app
RUN npm run build

# Stage 2: Production image
FROM nginx:1.23-alpine

# Copy the built React app from builder
COPY --from=builder /app/build /usr/share/nginx/html

# Copy custom nginx configuration if any
# COPY docker/nginx/conf/nginx-frontend.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start NGINX
CMD ["nginx", "-g", "daemon off;"]
